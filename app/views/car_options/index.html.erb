<h1>Listing car_options</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @car_options.each do |car_option| %>
  <tr>
    <td><%= car_option.name %></td>
    <td><%= car_option.price %></td>
    <td><%= car_option.category %></td>
    <td><%= link_to 'Show', car_option %></td>
    <td><%= link_to 'Edit', edit_car_option_path(car_option) %></td>
    <td><%= link_to 'Destroy', car_option, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

