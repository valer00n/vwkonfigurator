source 'https://rubygems.org'

gem 'rails', '3.2.8'

# impowered sass
gem 'compass'

# libs
gem 'jquery-rails'
gem "ember-rails"

# assets for precompile
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end

# database
gem 'mongoid'
gem 'mongo_ext'
gem "bson_ext"
gem 'mongoid_token', '~> 1.1.0'

# attaches
gem "paperclip"
gem "mongoid-paperclip", :require => "mongoid_paperclip"

# grants and 
gem "devise", ">= 2.1.2"
gem "cancan"
gem 'thin'

